<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:gravity="center"
    android:orientation="vertical">


    <ToggleButton
        android:id="@+id/togglebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:fontFamily="@font/mainbuttonsfont"
        android:onClick="onToggleClicked"
        android:textOff="Hints off"
        android:textOn="Hints on"
        android:background="@drawable/mainbuttons"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/guess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Guess: "
            android:textColor="@color/white"
            android:textSize="34dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="34dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text=""
        android:textColor="@color/white"
        android:textSize="28dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/answeris"
            android:textColor="@color/white"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/correct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="22dp" />

    </LinearLayout>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/remaintime"
        android:textColor="@color/white"
        android:textSize="16dp"/>

    <TextView
        android:id="@+id/time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:textStyle="bold"
        android:gravity="center" />

</LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="15dp">

        <Button
            android:id="@+id/one"
            android:layout_column="0"
            android:layout_row="0"
            android:text="1"
            android:background="@drawable/smallbuttons"/>

        <Button
            android:id="@+id/two"
            android:layout_column="1"
            android:layout_row="0"
            android:text="2"
            android:background="@drawable/smallbuttons"/>

        <Button
            android:id="@+id/third"
            android:layout_column="2"
            android:layout_row="0"
            android:text="3"
            android:background="@drawable/smallbuttons"/>

        <Button
            android:id="@+id/four"
            android:layout_column="0"
            android:layout_row="1"
            android:text="4"
            android:background="@drawable/smallbuttons"/>

        <Button
            android:id="@+id/five"
            android:layout_column="1"
            android:layout_row="1"
            android:text="5"
            android:background="@drawable/smallbuttons"/>

        <Button
            android:id="@+id/six"
            android:layout_column="2"
            android:layout_row="1"
            android:text="6"
            android:background="@drawable/smallbuttons"/>

        <Button
            android:id="@+id/seven"
            android:layout_column="0"
            android:layout_row="2"
            android:text="7"
            android:background="@drawable/smallbuttons"/>

        <Button
            android:id="@+id/eight"
            android:layout_column="1"
            android:layout_row="2"
            android:text="8"
            android:background="@drawable/smallbuttons"/>

        <Button
            android:id="@+id/nine"
            android:layout_column="2"
            android:layout_row="2"
            android:text="9"
            android:background="@drawable/smallbuttons"/>

        <Button
            android:id="@+id/delete"
            android:layout_column="0"
            android:layout_row="3"
            android:text="DEL"
            android:background="@drawable/smallbuttons"/>

        <Button
            android:id="@+id/zero"
            android:layout_column="1"
            android:layout_row="3"
            android:text="0"
            android:background="@drawable/smallbuttons"/>

        <Button
            android:id="@+id/hash"
            android:layout_column="2"
            android:layout_row="3"
            android:text="#"
            android:background="@drawable/smallbuttons"/>

        <Button
            android:id="@+id/dash"
            android:layout_column="3"
            android:layout_row="3"
            android:text="-"
            android:background="@drawable/smallbuttons"/>


    </GridLayout>

    <TextView
        android:id="@+id/hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/white"
        android:textSize="26dp"
        android:gravity="center"/>


</LinearLayout>